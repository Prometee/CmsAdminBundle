{% block collection_widget %}
{% spaceless %}
    {% if prototype is defined %}
        {% set attr = attr|merge({'data-prototype': form_row(prototype) }) %}
    {% endif %}
    <div {{ block('widget_container_attributes') }}>
        {% block collection_widget_fields %}
        <div class="collection-fields controls">
            {{ form_errors(form) }}
            {% for child in form %}
                <div class="collection-field-row">
                    {{ form_row(child) }}
                    {% if allow_delete is defined and allow_delete %}
                    <a href="#" class="delete-collection-row btn btn-danger">
                        {{ 'global.form_action.delete' | trans([], 'CmsAdminBundle') }}
                    </a>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
        {% endblock %}
        {% block collection_widget_actions %}
            {% if allow_add is defined and allow_add %}
                {% block collection_widget_action_add  %}
                <div class="controls">
                    <a href="#" class="add-collection-row btn">
                        {{ 'global.form_action.add' | trans([], 'CmsAdminBundle') }}
                    </a>
                </div>
                {% endblock %}
            {% endif %}
            {% if allow_delete is defined and allow_delete %}
                {% block collection_widget_action_remove  %}
                <a href="#" class="delete-collection-row btn btn-danger hide">
                    {{ 'global.form_action.delete' | trans([], 'CmsAdminBundle') }}
                </a>
                {% endblock %}
            {% endif %}
        {% endblock %}
        {{ form_rest(form) }}
    </div>
{% endspaceless %}
{% endblock collection_widget %}