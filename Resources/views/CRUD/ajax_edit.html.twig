{% extends 'CmsAdminBundle:CRUD:ajax_form.html.twig' %}
{% trans_default_domain 'CmsAdminBundle' %}

{% block form_title ( translation_prefix ~ '.edit.title' )|trans({'%name%': entity}, bundle_name) %}
{% block form_action path(route_form_action, { 'id': entity.id }) %}

{% block form_wrapper_tag %}
<div id="{{ modal_id }}" aria-labelledby="{{ modal_id }}_label" class="modal fade" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
{% endblock %}

{% block form_header %}
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="{{ modal_id ~ '_label' }}">{{ block('form_title') }}</h3>
    </div>
{% endblock %}

{% block form_content %}
    <div class="modal-body">
        {{ parent() }}
    </div>
{% endblock %}

{% block form_actions_list_default %}
    {{ form_widget(form.submit, {'icon_class': 'glyphicon glyphicon-floppy-disk', 'label': 'global.form_action.update', 'translation_domain':'CmsAdminBundle', 'attr':{'class': 'btn-primary'} }) }}
{% endblock %}

{% block form_actions_list %}
    <a class="btn btn-danger btn-confirm" data-title="{{ 'global.form_action.are_you_sure'|trans }}" href="{{ path(route_delete, { 'id': entity.id }) }}" >
        <i class="glyphicon glyphicon-remove-circle"></i>
        {{ 'global.form_action.delete'|trans }}
    </a>
{% endblock %}

{% block form_actions %}
    {% block ajax_form_footer %}
    <div class="modal-footer">
        {% block ajax_form_footer_actions %}
            {{ block('form_actions_list_default') }}
            {{ block('form_actions_list') }}
        {% endblock %}
        {% block ajax_form_footer_default_actions %}
        <button class="btn btn-link" data-dismiss="modal" aria-hidden="true">
            <i class="glyphicon glyphicon-remove"></i>
            {{ 'global.form_modal_action.close'|trans }}
        </button>
        {% endblock %}
    </div>
    {% endblock %}
{% endblock %}

{% block form_wrapper_end_tag %}
            </div>
        </div>
    </div>
{% endblock %}
